<%- include("templantes/cabecera", {nombre_pagina: 'Inicio'}) %>
<div class="container py-5">
  <% if (session.userId) { %>
    <div class="alert alert-success" role="alert">
      <h4 class="alert-heading">¡Bienvenido, <%= session.userName %>!</h4>
      <p>Has iniciado sesión correctamente en el sistema de nómina multinacional TCE.</p>
      <hr>
      <p class="mb-0">
        <a href="/auth/logout" class="btn btn-outline-danger">Cerrar Sesión</a>
      </p>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      <h4 class="alert-heading">Sistema de Nómina Multinacional TCE</h4>
      <p>Para acceder a las funcionalidades del sistema, por favor inicia sesión.</p>
      <hr>
      <p class="mb-0">
        <a href="/auth/login" class="btn btn-primary me-2">Iniciar Sesión</a>
        <a href="/auth/register" class="btn btn-outline-primary">Registrarse</a>
      </p>
    </div>
  <% } %>
  
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">Configuración</h5>
          <p class="card-text">Gestiona sectores, países y reglas de nómina</p>
          <a href="/nomina/config" class="btn btn-primary">Ir a Configuración</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">Empleados</h5>
          <p class="card-text">Administra empleados, contratos y horarios</p>
          <a href="/nomina/empleados" class="btn btn-primary">Ver Empleados</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">Períodos</h5>
          <p class="card-text">Calcula nóminas y genera recibos</p>
          <a href="/nomina/periodos" class="btn btn-primary">Ver Períodos</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("templantes/footer") %>



