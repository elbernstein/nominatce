<%- include("../templantes/cabecera", {nombre_pagina:'Configuración Nómina'}) %>
<div class="container mt-6">
  <div class="row">
    <div class="col-md-6">
      <div class="card card-custom">
        <div class="card-header"><h3 class="card-title">Nuevo Sector (Empresa-País)</h3></div>
        <form action="/nomina/sector" method="POST" class="form">
          <div class="card-body">
            <div class="form-group"><label>Nombre Comercial</label><input name="nombre_comercial" class="form-control form-control-solid" required></div>
            <div class="form-group"><label>Razón Social</label><input name="razon_social" class="form-control form-control-solid" required></div>
            <div class="form-group"><label>País (ISO2)</label><input name="pais_iso2" class="form-control form-control-solid" placeholder="CO" required></div>
            <div class="form-group"><label>Moneda (ISO3)</label><input name="moneda_iso3" class="form-control form-control-solid" placeholder="COP" required></div>
            <div class="form-group"><label>Time Zone</label><input name="timezone" class="form-control form-control-solid" placeholder="America/Bogota" required></div>
          </div>
          <div class="card-footer">
            <button class="btn btn-primary">Guardar</button>
          </div>
        </form>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card card-custom">
        <div class="card-header"><h3 class="card-title">Sectores</h3></div>
        <div class="card-body">
          <table class="table">
            <thead><tr><th>Comercial</th><th>País</th><th>Moneda</th><th>TZ</th></tr></thead>
            <tbody>
              <% sectores.forEach(s => { %>
                <tr><td><%= s.nombre_comercial %></td><td><%= s.pais_iso2 %></td><td><%= s.moneda_iso3 %></td><td><%= s.timezone %></td></tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>
